@{
    ViewData["Title"] = "Home Page";
}

@model loginReg.ViewModels.LoginViewModel

<div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h1>Welcome!</h1>
        <span class="error">@ViewBag.error</span>
        <form asp-controller="User" asp-action="Login" method="post" class="well">
            <div class="form-group">
                <span asp-validation-for="email" class="error"></span><br/>
                <label for="email" >Email: </label>
                <input class="form-control" asp-for="email">
            </div>
            <div class="form-group">
                <span asp-validation-for="password" class="error"></span><br/>
                <label for="password" >Password: </label>
                <input class="form-control" asp-for="password">
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary btn-block">
            </div>
        </form>
    </div>
    <div class="col-xs-6 col-md-3">
        <h3>Not a user yet?</h3>
        <a href="/" class="btn btn-primary btn-block">Register</a>
    </div>
</div>